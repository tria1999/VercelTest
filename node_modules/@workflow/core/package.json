{
  "name": "@workflow/core",
  "version": "4.0.1-beta.40",
  "description": "Core runtime and engine for Workflow DevKit",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/workflow.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workflow": "./dist/workflow/index.js",
      "default": "./dist/index.js"
    },
    "./runtime": "./dist/runtime.js",
    "./private": "./dist/private.js",
    "./class-serialization": "./dist/class-serialization.js",
    "./builtins": "./dist/builtins.js",
    "./serialization": "./dist/serialization.js",
    "./observability": {
      "types": "./dist/observability.d.ts",
      "node": "./dist/observability.js",
      "default": "./dist/observability.js"
    },
    "./parse-name": {
      "types": "./dist/parse-name.d.ts",
      "default": "./dist/parse-name.js"
    },
    "./_workflow": "./dist/workflow/index.js"
  },
  "dependencies": {
    "@aws-sdk/credential-provider-web-identity": "3.609.0",
    "@jridgewell/trace-mapping": "0.3.31",
    "@standard-schema/spec": "1.0.0",
    "@types/ms": "2.1.0",
    "@vercel/functions": "^3.1.4",
    "debug": "4.4.3",
    "devalue": "5.6.0",
    "ms": "2.1.3",
    "nanoid": "5.1.6",
    "seedrandom": "3.0.5",
    "ulid": "3.0.1",
    "zod": "4.1.11",
    "@workflow/errors": "4.0.1-beta.13",
    "@workflow/serde": "4.0.1-beta.1",
    "@workflow/utils": "4.0.1-beta.10",
    "@workflow/world": "4.0.1-beta.13",
    "@workflow/world-local": "4.0.1-beta.26",
    "@workflow/world-vercel": "4.0.1-beta.27"
  },
  "devDependencies": {
    "@opentelemetry/api": "1.9.0",
    "@types/debug": "4.1.12",
    "@types/node": "22.19.0",
    "@types/seedrandom": "3.0.8",
    "cross-env": "10.1.0",
    "@workflow/tsconfig": "4.0.1-beta.0"
  },
  "peerDependencies": {
    "@opentelemetry/api": "1"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "test": "cross-env WORKFLOW_TARGET_WORLD=local vitest run src",
    "test:e2e": "vitest run e2e",
    "typecheck": "tsc --noEmit"
  }
}